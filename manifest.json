{
  "manifest_version": 2,
  "name": "Paste Files as Attachments",
  "description": "Attach files as attachments, when copy-pasted into a message compose window.",
  "version": "1",
  "author": "John Bieling",
  "homepage_url": "https://github.com/thunderbird-community/Paste-Files-As-Attachments",
  "applications": {
    "gecko": {
      "id": "paste-file-as-attachments@simple.addons",
      "strict_min_version": "128.0"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "64": "assets/icon64.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "compose"
  ]
}